# Firebase Client SDK Configuration
# These are used for client-side authentication and database access.
# You can find these in your Firebase project settings under "General".
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="your-measurement-id"

# Genkit/Vertex AI Configuration
# This API key is for server-side AI operations (e.g., generating emails).
# You can create one in the Google Cloud Console for your project.
# Ensure the "Vertex AI API" is enabled for your project.
GOOGLE_API_KEY="your-google-cloud-api-key"

# Nodemailer Configuration (for sending emails)
# Use an app-specific password if using Gmail.
EMAIL_HOST="smtp.example.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password"
EMAIL_FROM='"Vical Farmart" <noreply@yourdomain.com>'

# Cloudinary Configuration (for image uploads)
# You can find these in your Cloudinary dashboard.
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
NEXT_PUBLIC_CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Flutterwave Configuration (for payments)
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY="your-flutterwave-public-key"
