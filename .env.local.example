
# Firebase Client SDK Configuration
# These are exposed to the browser and are prefixed with NEXT_PUBLIC_
# Get these from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_PROJECT_ID.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_PROJECT_ID.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="YOUR_MEASUREMENT_ID"

# Firebase Admin SDK Configuration (for server-side operations)
# These should be kept secret and are NOT prefixed with NEXT_PUBLIC_
# Get these from your Firebase project's service account settings (JSON file)
# Make sure to format the private key correctly if copying from the JSON file
FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"


# Google AI (Gemini) API Key
# For Genkit AI flows (e.g., generating emails)
# Get this from Google AI Studio
GOOGLE_API_KEY="YOUR_GEMINI_API_KEY"


# Cloudinary Configuration (for image uploads)
# Get these from your Cloudinary dashboard
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="YOUR_CLOUD_NAME"
NEXT_PUBLIC_CLOUDINARY_API_KEY="YOUR_API_KEY"
CLOUDINARY_API_SECRET="YOUR_API_SECRET" # This one is secret!


# Email Service (Nodemailer) Configuration
# Use your email provider's SMTP details
EMAIL_HOST="smtp.example.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password-or-app-password"
EMAIL_FROM='"Your App Name" <noreply@yourdomain.com>'
