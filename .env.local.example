# ===================================================================
# Firebase Client SDK Configuration
#
# These variables are prefixed with NEXT_PUBLIC_ so they can be
# accessed in browser-side code.
#
# Find these values in your Firebase project settings:
# Project Settings > General > Your apps > Firebase SDK snippet > Config
# ===================================================================
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_PROJECT_ID.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_PROJECT_ID.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="YOUR_MEASUREMENT_ID"

# ===================================================================
# Application URL
#
# This is the base URL of your deployed application.
# For local development, it's typically http://localhost:9002
# ===================================================================
NEXT_PUBLIC_APP_URL="http://localhost:9002"

# ===================================================================
# Firebase Admin SDK Configuration
#
# This is a sensitive credential used for server-side operations.
# DO NOT expose this to the client.
#
# 1. Go to your Firebase project settings.
# 2. Go to the "Service accounts" tab.
# 3. Click "Generate new private key".
# 4. A JSON file will be downloaded. Copy the ENTIRE contents of that
#    file and paste it here as a single-line string.
#    (e.g., {"type": "service_account", ...})
# ===================================================================
FIREBASE_SERVICE_ACCOUNT_JSON='{"type": "service_account", "project_id": "...", ...}'

# ===================================================================
# Cloudinary Configuration
#
# These are used for handling image uploads.
# Find these in your Cloudinary dashboard.
# =================================a==================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="YOUR_CLOUD_NAME"
NEXT_PUBLIC_CLOUDINARY_API_KEY="YOUR_API_KEY"
CLOUDINARY_API_SECRET="YOUR_API_SECRET"


# ===================================================================
# Email (Nodemailer) Configuration
#
# These are the credentials for your SMTP server to send emails.
# ===================================================================
EMAIL_HOST="your.smtp.server.com"
EMAIL_PORT=587
EMAIL_USER="your_email_